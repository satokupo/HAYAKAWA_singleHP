---
// Hero Section
---

<section id="hero" class="hero">
    <div class="hero__content">
        <div class="hero__header">
            <h1 class="hero__title"><span class="hero__title-text">HAYAKAWA</span></h1>
        </div>
        <div class="hero__bottom">
            <p class="hero__catch">カフェみたいな、餃子屋。</p>
        </div>
    </div>
</section>

<style>
    .hero {
        position: relative;
        height: min(95lvh, 900px);
        background-image: url('/images/hero-main-sp.webp');
        background-size: cover;
        background-position: center center;
        background-repeat: no-repeat;
        background-color: var(--bg-section);
    }

    @media (min-width: 768px) {
        .hero {
            background-image: url('/images/hero-main-pc.webp');
        }
    }

    .hero::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 80px;
        background: linear-gradient(to bottom, transparent, var(--bg-main));
        pointer-events: none;
    }

    .hero__content {
        position: relative;
        height: 100%;
        box-sizing: border-box;
        display: grid;
        grid-template-rows: 1fr 1fr;
        gap: 1.5rem;
        padding: 3rem 1.5rem 1.5rem;
    }

    .hero__header {
        /* 上部：タイトルエリア */
    }

    .hero__title {
        position: relative;
        display: inline-block;
        font-size: 3rem;
        font-weight: 700;
        letter-spacing: 0.1em;
        color: var(--color-primary);
        padding: 0.75rem 1.5rem 0.75rem 1.5rem;
        margin-left: -1.5rem;
        margin-top: 1rem;
        overflow: hidden;
    }

    .hero__title::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(255, 255, 255, 0.85);
        animation: heroCardSlideIn 0.5s ease-out 0.3s both;
    }

    .hero__title-text {
        display: inline-block;
        position: relative;
        z-index: 1;
        animation: heroTextSlideIn 0.5s ease-out 0.8s both;
    }

    .hero__subtitle {
        font-size: 1rem;
        color: var(--color-text-sub);
        margin-top: 0.125rem;
    }

    .hero__bottom {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        align-items: end;
        padding-bottom: 2rem;
    }

    .hero__catch {
        font-family: 'Zen Kurenaido', cursive;
        font-size: 1.5rem;
        writing-mode: vertical-rl;
        color: var(--color-primary);
        justify-self: center;
        align-self: center;
        text-shadow: 0 0 8px rgba(255, 255, 255, 0.8);
        animation: heroFocusFadeIn 0.8s ease-out 1.5s both;
    }

    @keyframes heroCardSlideIn {
        from { transform: translateX(-100%); }
        to { transform: translateX(0); }
    }

    @keyframes heroTextSlideIn {
        from { transform: translateX(calc(-100% - 3rem)); }
        to { transform: translateX(0); }
    }

    @keyframes heroFocusFadeIn {
        from { opacity: 0; filter: blur(10px); }
        to { opacity: 1; filter: blur(0); }
    }
</style>
