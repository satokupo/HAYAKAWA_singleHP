---
// Limited (今月の餃子) Section
// SSG化に伴い、動的コンテンツはクライアントサイドでfetchする
import LimitedIsland from '../components/LimitedIsland';

const baseUrl = import.meta.env.BASE_URL;
const adminApiUrl = import.meta.env.PUBLIC_ADMIN_API_URL || 'http://localhost:8789';
---

<section id="limited" class="limited" style={`--limited-bg: url('${baseUrl}images/limited-bg.webp');`}>
    <LimitedIsland client:load adminApiUrl={adminApiUrl} baseUrl={baseUrl} />
</section>

<style>
    .limited {
        position: relative;
        height: min(100svh, 900px);
        background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), var(--limited-bg);
        background-size: cover;
        background-position: center;
        padding: 0 1rem;
    }

    .limited :global(.limited__content) {
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    .limited :global(.limited__title) {
        font-size: 1.25rem;
        color: #fff;
        margin-bottom: 1.5rem;
    }

    .limited :global(.limited__image-wrapper) {
        position: relative;
        width: 260px;
        height: 260px;
    }

    .limited :global(.limited__image) {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
    }

    .limited :global(.limited__image--skeleton) {
        background-color: rgba(255, 255, 255, 0.1);
        animation: pulse 1.5s ease-in-out infinite;
    }

    .limited :global(.limited__decoration) {
        position: absolute;
        top: -12px;
        left: -12px;
        width: calc(100% + 24px);
        height: calc(100% + 24px);
    }

    .limited :global(.limited__name) {
        font-size: 1.5rem;
        font-weight: 700;
        margin-top: 1.5rem;
        color: #fff;
    }

    .limited :global(.limited__name--skeleton) {
        width: 120px;
        background-color: rgba(255, 255, 255, 0.1);
        animation: pulse 1.5s ease-in-out infinite;
    }

    .limited :global(.limited__description) {
        font-size: 0.875rem;
        color: rgba(255, 255, 255, 0.85);
        margin-top: 0.5rem;
        line-height: 1.6;
    }

    .limited :global(.limited__description--skeleton) {
        width: 200px;
        background-color: rgba(255, 255, 255, 0.1);
        animation: pulse 1.5s ease-in-out infinite;
    }

    @keyframes pulse {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0.5;
        }
    }
</style>
