---
// Shop (店舗情報) Section
// SSG化に伴い、カレンダーはクライアントサイドでfetchする
import CalendarIsland from '../components/CalendarIsland';

const baseUrl = import.meta.env.BASE_URL;
---

<section id="info" class="shop" style={`--noise-bg: url('${baseUrl}images/noise.webp');`}>
    <div class="shop__content">
        <h2 class="shop__logo">HAYAKAWA</h2>

        <p class="shop__hours">11:00 - 16:00（L.o.15:45）</p>

        <a href="https://maps.app.goo.gl/nzqpWmvyuoDS8iPu8"
           target="_blank"
           rel="noopener noreferrer"
           class="shop__hours-btn">
            営業時間を確認する
        </a>

        <CalendarIsland client:load baseUrl={baseUrl} />

        <p class="shop__days">月・水・金・土</p>

        <address class="shop__address">
            <p class="shop__address-text">長野県飯田市仲ノ町353-10</p>
            <p class="shop__phone">
                <a href="tel:050-8885-3753">050-8885-3753</a>
            </p>
        </address>

        <div class="shop__actions">
            <a href="https://book.squareup.com/appointments/7fdtqzj51090mo/location/LY0JN74T6NBHG/services"
               target="_blank"
               rel="noopener noreferrer"
               class="shop__btn shop__btn--outline">
                予約する
            </a>
            <a href="https://maps.app.goo.gl/nzqpWmvyuoDS8iPu8"
               target="_blank"
               rel="noopener noreferrer"
               class="shop__btn shop__btn--outline">
                地図を見る
            </a>
        </div>

        <div class="shop__social">
            <a href="https://www.instagram.com/hayakawa_gyoza/"
               target="_blank"
               rel="noopener noreferrer"
               aria-label="Instagram"
               class="shop__social-link">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
                </svg>
            </a>
        </div>
    </div>
</section>

<style>
    .shop {
        background-color: #2A2620;
        padding: 3rem 1.5rem;
        padding-bottom: 0;
        position: relative;
    }

    .shop::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: var(--noise-bg);
        background-repeat: repeat;
        opacity: 0.05;
        pointer-events: none;
        z-index: 0;
    }

    .shop__content {
        text-align: center;
        position: relative;
        z-index: 1;
    }

    .shop__logo {
        font-size: 1.75rem;
        font-weight: 400;
        letter-spacing: 0.15em;
        color: var(--color-text-light);
        margin-bottom: 1rem;
    }

    .shop__hours {
        font-size: 0.875rem;
        color: var(--color-text-light);
        margin-bottom: 1rem;
    }

    .shop__hours-btn {
        display: inline-block;
        background-color: var(--color-text-light);
        color: var(--bg-dark);
        font-size: 0.875rem;
        font-weight: 500;
        padding: 0.625rem 1.5rem;
        border-radius: 0.375rem;
        text-decoration: none;
        margin-bottom: 1.5rem;
        transition: opacity 0.2s;
    }

    .shop__hours-btn:hover,
    .shop__hours-btn:focus {
        opacity: 0.85;
    }

    .shop :global(.shop__calendar) {
        margin-bottom: 1rem;
    }

    .shop :global(.shop__calendar-image) {
        max-width: 280px;
        width: 100%;
        height: auto;
    }

    .shop :global(.shop__calendar-image--skeleton) {
        width: 280px;
        height: 200px;
        background-color: rgba(255, 255, 255, 0.1);
        animation: pulse 1.5s ease-in-out infinite;
    }

    .shop__days {
        font-size: 1rem;
        font-weight: 500;
        color: var(--color-text-light);
        letter-spacing: 0.5em;
        margin-bottom: 1.5rem;
    }

    .shop__address {
        font-style: normal;
        color: var(--color-text-light);
        margin-bottom: 1.5rem;
    }

    .shop__address-text {
        font-size: 0.875rem;
        margin-bottom: 0.5rem;
    }

    .shop__phone {
        font-size: 1rem;
    }

    .shop__phone a {
        color: var(--color-text-light);
        text-decoration: none;
    }

    .shop__actions {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-bottom: 2rem;
    }

    .shop__btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 120px;
        padding: 0.75rem 1.5rem;
        font-size: 0.875rem;
        font-weight: 500;
        border-radius: 0.375rem;
        text-decoration: none;
        transition: background-color 0.2s, color 0.2s;
    }

    .shop__btn--outline {
        background-color: transparent;
        color: var(--color-text-light);
        border: 1px solid var(--color-text-light);
    }

    .shop__btn--outline:hover,
    .shop__btn--outline:focus {
        background-color: var(--color-text-light);
        color: var(--bg-dark);
    }

    .shop__social {
        margin-top: 1.5rem;
    }

    .shop__social-link {
        display: inline-flex;
        color: var(--color-text-light);
        transition: opacity 0.2s;
    }

    .shop__social-link:hover,
    .shop__social-link:focus {
        opacity: 0.7;
    }

    @keyframes pulse {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0.5;
        }
    }
</style>
