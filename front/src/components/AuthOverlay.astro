---
// 簡易認証オーバーレイ（動作確認時の臨時セキュリティ・本番公開時は削除）
---

<div id="auth-overlay" class="auth-overlay">
    <p class="auth-overlay__title">パスワードを入力してください</p>
    <input type="password" id="auth-input" class="auth-overlay__input" placeholder="パスワード" autofocus>
    <button id="auth-btn" class="auth-overlay__btn">Enter</button>
    <p id="auth-error" class="auth-overlay__error">パスワードが違います</p>
</div>

<script>
    (function() {
        const PASS = 'HAYAKAWA';
        const KEY = 'hayakawa_auth';
        const overlay = document.getElementById('auth-overlay');
        const input = document.getElementById('auth-input');
        const btn = document.getElementById('auth-btn');
        const error = document.getElementById('auth-error');

        if (!overlay) return;

        // 認証済みならオーバーレイを非表示
        if (sessionStorage.getItem(KEY) === 'true') {
            overlay.classList.add('is-hidden');
        }

        function checkPassword() {
            if (input.value === PASS) {
                sessionStorage.setItem(KEY, 'true');
                overlay.classList.add('is-hidden');
            } else {
                error.classList.add('is-visible');
                input.value = '';
                input.focus();
            }
        }

        btn.addEventListener('click', checkPassword);
        input.addEventListener('keydown', function(e) {
            if (e.key === 'Enter') checkPassword();
        });
    })();
</script>

<style>
    .auth-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .auth-overlay.is-hidden {
        display: none;
    }

    .auth-overlay__title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--color-primary);
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .auth-overlay__input {
        font-size: 1rem;
        padding: 0.75rem 1rem;
        border: 1px solid #ccc;
        border-radius: 0.375rem;
        width: 200px;
        margin-bottom: 1rem;
        text-align: center;
    }

    .auth-overlay__btn {
        font-size: 0.875rem;
        font-weight: 500;
        padding: 0.625rem 1.5rem;
        background-color: var(--color-primary);
        color: #fff;
        border: none;
        border-radius: 0.375rem;
        cursor: pointer;
    }

    .auth-overlay__error {
        color: #e53e3e;
        font-size: 0.875rem;
        margin-top: 1rem;
        visibility: hidden;
    }

    .auth-overlay__error.is-visible {
        visibility: visible;
    }
</style>
