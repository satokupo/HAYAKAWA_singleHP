---
/**
 * OGPプレビューコンポーネント
 */

import type { OgpContent } from '../lib/types';

interface Props {
  content: OgpContent | null;
}

const { content } = Astro.props;
---

<div class="bg-white rounded-lg shadow-sm p-4">
  <h2 class="text-lg font-bold text-gray-800 mb-4">OGP設定</h2>

  {content ? (
    <div>
      <!-- カード形式のプレビュー -->
      <div class="border rounded-lg overflow-hidden mb-3">
        <div class="aspect-[1200/630] bg-gray-200">
          <img
            src={content.imageUrl}
            alt="OGP画像"
            class="w-full h-full object-cover"
          />
        </div>
        <div class="p-2 bg-gray-50">
          <p class="text-xs text-gray-500 mb-0.5">hayakawa-gyoza.com</p>
          <p class="font-bold text-gray-800 text-sm line-clamp-1">{content.title}</p>
          <p class="text-xs text-gray-600 mt-0.5 line-clamp-2">{content.description}</p>
        </div>
      </div>
      <p class="text-gray-400 text-xs mb-3">
        更新日: {new Date(content.updatedAt).toLocaleString('ja-JP')}
      </p>
      <a
        href="/update/ogp"
        class="block w-full py-2 px-4 bg-blue-600 text-white text-center font-medium rounded-md hover:bg-blue-700"
      >
        変更する
      </a>
    </div>
  ) : (
    <div>
      <div class="border rounded-lg overflow-hidden mb-3">
        <div class="aspect-[1200/630] bg-gray-100 flex items-center justify-center">
          <p class="text-gray-400 text-center text-sm">まだ設定<br />されていません</p>
        </div>
        <div class="p-2 bg-gray-50">
          <p class="text-xs text-gray-500 mb-0.5">hayakawa-gyoza.com</p>
          <p class="font-bold text-gray-400 text-sm">タイトル未設定</p>
          <p class="text-xs text-gray-400 mt-0.5">説明文未設定</p>
        </div>
      </div>
      <a
        href="/update/ogp"
        class="block w-full py-2 px-4 bg-blue-600 text-white text-center font-medium rounded-md hover:bg-blue-700"
      >
        設定する
      </a>
    </div>
  )}
</div>
