---
/**
 * 限定メニュープレビューコンポーネント
 */

import type { LimitedMenuContent } from '../lib/types';

interface Props {
  content: LimitedMenuContent | null;
}

const { content } = Astro.props;
---

<div class="bg-white rounded-lg shadow-sm p-4">
  <h2 class="text-lg font-bold text-gray-800 mb-4">限定メニュー</h2>

  {content ? (
    <div>
      <div class="w-40 h-40 mx-auto bg-gray-100 rounded-full overflow-hidden mb-3">
        <img
          src={content.imageUrl}
          alt={content.title}
          class="w-full h-full object-cover"
        />
      </div>
      <div class="text-sm mb-3">
        <h3 class="font-bold text-gray-800">{content.title}</h3>
        <p class="text-gray-600 mt-1">{content.description}</p>
        <p class="text-gray-400 mt-2">
          更新日: {new Date(content.updatedAt).toLocaleString('ja-JP')}
        </p>
      </div>
      <a
        href="/update/limited"
        class="block w-full py-2 px-4 bg-blue-600 text-white text-center font-medium rounded-md hover:bg-blue-700"
      >
        変更する
      </a>
    </div>
  ) : (
    <div>
      <div class="w-40 h-40 mx-auto bg-gray-100 rounded-full flex items-center justify-center mb-3">
        <p class="text-gray-400 text-center text-sm">まだ設定<br />されていません</p>
      </div>
      <a
        href="/update/limited"
        class="block w-full py-2 px-4 bg-blue-600 text-white text-center font-medium rounded-md hover:bg-blue-700"
      >
        変更する
      </a>
    </div>
  )}
</div>
